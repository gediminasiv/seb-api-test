{% extends '@AppBundle/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <ul class="list-group console-output">
              <li class="list-group-item">Sending authentication request... (POST https://test.api.ob.baltics.sebgroup.com/v1/user/authorization?bic=CBVILT2X)</li>
            </ul>
        </div>
        <div class="col-12 select-account" style="display: none;">
            <div class="card no-border">
                <div class="card-body">
                      <ul class="list-group list-group-flush card-full">
                        <li class="list-group-item"><b>Shop:</b> {{ paymentInfo.shop }}</li>
                        <li class="list-group-item"><b>Seller Bank:</b> {{ paymentInfo.bank }}</li>
                        <li class="list-group-item"><b>SUM:</b> <u>{{ paymentInfo.sum }} {{ paymentInfo.currency }}</u></li>
                        <li class="list-group-item"><small><b>IBAN:</b> {{ paymentInfo.iban }}</small></li>
                      </ul>
                </div>
            </div>

            <br /><br />

            <select class="form-control">
                <option value="none" disabled selected>Select bank account...</option>
                {% for account in accounts %}
                    <option {{ loop.index == 2 ? ' selected ' }} value="{{ account.account }}">{{ account.bank }} - {{ account.account }} ({{ account.sum }} {{ account.currency }})</option>
                {% endfor %}
            </select>

            <br />

            <div class="alert alert-success" role="alert">
              Transaction fee: <b>+â‚¬0.00</b>
            </div>

            <div class="card no-border">
                <div class="card-body text-center">
                    <button onclick="window.location.href='{{ path('confirm_payment_page') }}';" class="btn btn-lg btn-success">Confirm</button>
                </div>
            </div>

            <hr />

        </div>
    </div>
{% endblock %}
